<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView

            android:id="@+id/item_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="4dp">

            <LinearLayout
                android:id="@+id/swipe_background"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/buy_button"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"

                    android:background="@color/colorsSwipeItem0"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/buy"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_shopping_cart_white_24dp"
                            android:tint="@color/colorAccent" />

                        <TextView
                            android:id="@+id/buy_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Buy"
                            android:textColor="@color/colorCardView"
                            android:textStyle="bold" />


                    </LinearLayout>

                </RelativeLayout>


                <RelativeLayout
                    android:id="@+id/seller_contact"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorsSwipeItem1"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="?android:selectableItemBackground"
                        android:gravity="center"
                        android:orientation="vertical">

                        <de.hdodenhof.circleimageview.CircleImageView
                            android:id="@+id/seller_image"
                            android:layout_width="52dp"
                            android:layout_height="52dp"
                            android:src="@android:mipmap/sym_def_app_icon"
                            app:civ_border_color="@color/colorCardView"
                            app:civ_border_width="2dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Contact"
                            android:textColor="@color/colorCardView"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/seller_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:text="Seller Name"
                            android:textColor="@color/colorCardView"
                            android:textStyle="bold" />

                        <!--<TextView-->
                        <!--android:layout_width="wrap_content"-->
                        <!--android:layout_height="wrap_content"-->
                        <!--android:layout_gravity="center"-->
                        <!--android:layout_marginLeft="8dp"-->
                        <!--android:layout_marginRight="8dp"-->
                        <!--android:ellipsize="end"-->
                        <!--android:gravity="center"-->
                        <!--android:maxLines="1"-->
                        <!--android:text="Seller"-->
                        <!--android:textColor="@android:color/white"-->
                        <!--android:textSize="12sp" />-->
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/map_view"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorsSwipeItem2"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="?android:selectableItemBackground"

                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/map_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_map_white_24dp"
                            android:tint="@color/colorCardView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:text="Map View"
                            android:textColor="@color/colorCardView"
                            android:textStyle="bold" />


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe_foreground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/book_image_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBookCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:maxHeight="128dp"
                        android:maxWidth="72dp"
                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/book_details_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:paddingLeft="6dp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvBookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="top"
                        android:text="Book Title"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorname"
                        android:textColor="@color/colorTextLight" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$34.00"
                        android:textColor="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distance_marker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_place_white_24dp"
                            android:tint="@color/colorIcon" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/distance_marker"
                            android:text="1.5 miles away"
                            android:textColor="@color/colorTextLight" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ratings_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:layout_marginTop="4dp">

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="2.0"
                            android:stepSize="1.0" />

                        <TextView
                            android:id="@+id/ratings_count"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rating"
                            android:text="(25)"
                            android:textColor="@color/colorTextLight" />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>


</RelativeLayout>
