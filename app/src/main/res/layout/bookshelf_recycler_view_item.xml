                        <!--android:maxLines="1"-->
                        <!--android:text="Seller"-->
                        <!--android:textColor="@android:color/white"-->
                        <!--android:textSize="12sp" />-->
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/unlist"
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:background="@color/colorsSwipeItem2"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="?android:selectableItemBackground"

                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView

                            android:id="@+id/map_icon"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_map_white_24dp"
                            android:tint="@color/colorCardView" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:maxLines="1"
                            android:id="@+id/unlist_textView"
                            android:text="Unlist"
                            android:textColor="@color/colorCardView"
                            android:textStyle="bold" />


                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/swipe_foreground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/book_image_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.75"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivBookCover"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:adjustViewBounds="true"
                        android:background="@drawable/background"
                        android:maxHeight="128dp"
                        android:maxWidth="72dp"

                        android:scaleType="fitXY"
                        android:src="@mipmap/ic_launcher" />


                </LinearLayout>

                <LinearLayout

                    android:id="@+id/book_details_container"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:layout_weight="2"
                    android:background="@android:color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:orientation="vertical"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tvBookTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:gravity="top"
                        android:text="Book Title"
                        android:textColor="@android:color/black"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvAuthorName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/authorname"
                        android:textColor="@color/colorTextLight" />

                    <TextView
                        android:id="@+id/tvPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$34.00"
                        android:textColor="@color/colorPrimary" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <ImageView
                            android:id="@+id/distance_marker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:src="@drawable/ic_place_white_24dp"
                            android:tint="@color/colorIcon" />

                        <TextView
                            android:id="@+id/tvLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:layout_toRightOf="@+id/distance_marker"
                            android:text="1.5 miles away"
                            android:textColor="@color/colorTextLight" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/ratings_container"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp">

                        <RatingBar
                            android:id="@+id/rating"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="2.0"
                            android:stepSize="1.0" />

                        <TextView
                            android:id="@+id/ratings_count"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/rating"
                            android:text="(25)"
                            android:textColor="@color/colorTextLight" />

                    </RelativeLayout>

