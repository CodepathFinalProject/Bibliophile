                    <!--android:layout_marginTop="4dp"-->
                    <!--android:autoLink="all"-->
                    <!--android:ellipsize="end"-->
                    <!--android:maxLines="2"-->
                    <!--android:text="New Description"-->
                    <!--android:textColor="@color/colorTextLight" />-->


                </LinearLayout>


