<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.PostFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:layout_width="match_parent"
        android:layout_height="196dp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/search_instructions"
        android:id="@+id/tvSearchInstructions"
        android:layout_gravity="left|top" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_search_ISBN"
        android:id="@+id/btnSearchISBN"
        android:layout_gravity="right|bottom"
        android:onClick="findBookByISBN"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/etISBN"
        android:layout_gravity="left|center_vertical"
        android:hint="@string/hint_ISBN" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_scan_barcode"
        android:id="@+id/btnSearchBarcode"
        android:layout_gravity="left|bottom" />
</FrameLayout>
